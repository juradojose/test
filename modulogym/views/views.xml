    <!-- Top menu item -->
    
    <menuitem name="Gym" id="modulogym.menu_gym"/>
    
    <!-- menu categories -->
    
    <menuitem name="Socios" id="modulogym.menu_socios" parent="modulogym.menu_gym" action="modulogym.action_window"/>
    <menuitem name="Staff" id="modulogym.menu_staff" parent="modulogym.menu_gym" action="modulogym.action_window2"/>
    <menuitem name="Clases" id="modulogym.menu_clases" parent="modulogym.menu_gym" action="modulogym.action_window3"/>
