<odoo>
  <data>
    <!-- explicit list view definition --> 
    
    <record id="res_partner_inherit" model="ir.ui.view">
      <field name="name">res.partner.inherit</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref="base.view_partner_form"/>
      <field name="arch" type="xml">
        <field name="street" position="after">
          <field name="contacto_emergencia"/>
        </field>  
      </field>
    </record>
    
    <record model="ir.ui.view" id="modulogym.list_001">
      <field name="name">vista.lista.modulogym</field>
      <field name="model">modulogym.modulogym</field>
      <field name="arch" type="xml">
        <tree>
          <field name="nombre_socio"/>
          <field name="direccion_socio"/>
          <field name="telefono_socio"/>
          <field name="edad_socio"/>
          <field name="inscripcion_socio"/>
          <field name="sexo_socio"/>
          <field name="imagen"/>
          <field name="override_create"/>
          <field name="override_write"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="modulogym.form_001">
      <field name="name">vista.formulario.modulogym</field>
      <field name="model">modulogym.modulogym</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group col="4">
              <field name="nombre_socio"/>
              <field name="direccion_socio"/>
              <field name="telefono_socio"/>
              <field name="edad_socio" widget="integer"/>
              <field name="inscripcion_socio"/>
              <field name="sexo_socio" widget="radio"/>
              <field name="imagen" widget="image"/>
              <field name="override_create"/>
              <field name="override_write"/> 
            </group>
          </sheet>
        </form>
      </field>
    </record>

     <record model="ir.ui.view" id="modulogym.list_002">
      <field name="name">vista.lista.modulogymstaff</field>
      <field name="model">modulogymstaff.modulogymstaff</field>
      <field name="arch" type="xml">
        <tree>
          <field name="nombre_staff"/>
          <field name="direccion_staff"/>
          <field name="telefono_staff" widget="phone"/>
          <field name="sexo_staff"/>
          <field name="ingreso_staff"/>
          <field name="puesto_staff"/>
          <field name="email_staff" widget="email"/>
        </tree>
      </field>
    </record> 

    <record model="ir.ui.view" id="modulogym.form_002">
      <field name="name">vista.formulario.modulogymstaff</field>
      <field name="model">modulogymstaff.modulogymstaff</field>
      <field name="arch" type="xml">
        <form>
          <header>
            <button string="Confirmar" type="object" name="confirmar_progressbar" states="b" class="oe_highlight"/>
            <button string="Listo" type="object" name="listo_progressbar" class="oe_highlight" states="c"/>
            <field name="state" widget="statusbar" statusbar_visible="b,c,l"/>
          </header>
          <sheet>
            <group col="4">
              <field name="nombre_staff"/>
              <field name="direccion_staff"/>
              <field name="telefono_staff" widget="phone"/>
              <field name="sexo_staff" widget="radio"/>
              <field name="ingreso_staff"/>
              <field name="puesto_staff"/>
              <field name="email_staff" widget="email"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>         

    <record model="ir.ui.view" id="modulogym.list_003">
      <field name="name">vista.lista.modulogymclases</field>
      <field name="model">modulogymclases.modulogymclases</field>
      <field name="arch" type="xml">
        <tree>
          <field name="nombre_clase"/>
          <field name="horario_clase"/>
          <field name="instructor_clase" widget="selection"/>
          <field name="clave_clase"/>
          <field name="terminada"/>
        </tree>
      </field>
    </record> 

    <record model="ir.ui.view" id="modulogym.form_003">
      <field name="name">vista.formulario.modulogymclases</field>
      <field name="model">modulogymclases.modulogymclases</field>
      <field name="arch" type="xml">
        <form>
          <header>
          <button string="Generar Clave" type="object" name="genera_1" class="oe_highlight"/>
          <button string="Limpiar Caracteres" type="object" name="limpiar"/>
          <button string="Terminar Clase" type="action" name="%(modulogym.terminar_clase_wizard)d" class="oe_highlight"/>
         </header>
          <sheet>
            <group col="4">
              <field name="nombre_clase"/>
              <field name="horario_clase"/>
              <field name="instructor_clase"/>
              <field name="clave_clase"/>
              <field name="terminada"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>   


    <!-- actions opening views on models -->
    
    <record model="ir.actions.act_window" id="modulogym.action_window">
      <field name="name">Socios</field>
      <field name="res_model">modulogym.modulogym</field>
      <field name="view_mode">tree,form</field>
      <field name="view_type">form</field>
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">
          Pulsa crear para generar un registro
        </p>
      </field>    
    </record>

    <record model="ir.actions.act_window" id="modulogym.action_window2">
      <field name="name">Staff</field>
      <field name="res_model">modulogymstaff.modulogymstaff</field>
      <field name="view_mode">tree,form</field>
      <field name="view_type">form</field>
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">
          Pulsa crear para generar un registro
        </p>
      </field>    
    </record>

    <record model="ir.actions.act_window" id="modulogym.action_window3">
      <field name="name">Clases</field>
      <field name="res_model">modulogymclases.modulogymclases</field>
      <field name="view_mode">tree,form</field>
      <field name="view_type">form</field>
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">
          Pulsa crear para generar un registro
        </p>
      </field>    
    </record>
    

