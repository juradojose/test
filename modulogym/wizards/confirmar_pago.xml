<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="confirmar_pago_form" model="ir.ui.view">
			<field name="name">confirmar.pago.wizard</field>
			<field name="model">c.pago</field>
			<field name="arch" type="xml">
				<form string="Confirmar Pago">
					<group>
						<field name="nombre_socio"/>
						<field name="pago"/>
					</group>
					<footer>
						<button name="pago_socio" string="Confirmar" type="object" class="btn-primary"/>
						<button string="Cancelar" class="btn-secondary" special="cancel"/>
					</footer>
				</form>
			</field>			
		</record>	

		<record id="confirmar_pago_wizard" model="ir.actions.act_window">
			<field name="name">Confirmar Pago</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">c.pago</field>
			<field name="view_mode">form</field>
			<field name="view_id" ref="confirmar_pago_form"/>
			<field name="target">new</field>
		</record>	
	</data>
</odoo>
